<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StudentRegistrationController">
    <Label text="Student Registration Form"/>
    <HBox>
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>
    </HBox>
    <HBox>
        <Label text="ID:"/>
        <TextField fx:id="idField"/>
    </HBox>
    <HBox>
        <Label text="Email:"/>
        <TextField fx:id="emailField"/>
    </HBox>
    <Label text="Select Courses:"/>
    <ListView fx:id="courseListView"/>
    <Button text="Register" onAction="#register"/>
</VBox>
